# Database connection (for local development, use localhost; Docker uses 'db')
DATABASE_URL=postgresql+psycopg2://asset_user:asset_pass@localhost:5432/asset_db

# Google OAuth (get these from https://console.cloud.google.com)
# 1. Go to APIs & Services > Credentials
# 2. Create OAuth 2.0 Client ID (Web application)
# 3. Add redirect URI: http://localhost:8000/auth/google/callback
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Frontend URL (where users are redirected after login)
FRONTEND_URL=http://localhost:3000

# Session secret for OAuth state (generate a random string)
SESSION_SECRET=generate-a-random-secret-here

# JWT secret for token signing (generate a long random string)
# You can generate one with: openssl rand -hex 32
JWT_SECRET=generate-a-long-random-secret-here
